
 <div class="ui raised very padded text container segment"> 
  <h1 class="ui header">To Do List</h1> 
  <p align="right"><%= link_to 'ADD LIST', new_todo_path, class: "ui primary button" %>
  </p>  
    <ul>
      <% @todos.each do |todo| %>
        <li>
          <div class="ui segment">
            <h2 class="ui right floated header"><%= todo.title %></h2>
            <div class="ui clearing divider"></div>
            <p class="short" ><%= todo.note %></p>
            <div class="large ui buttons">
              <button class="ui button"><%= link_to 'Show' , todo_path(todo) %></button>
              <button class="ui button"><%= link_to 'Edit' , edit_todo_path(todo) %></button>
              <button class="ui button"><%= link_to 'Destroy' , todo_path(todo),method: :delete, data:{confirm:"Are you finish ?"} %></button>  
            </div>   
          </div>
            
        </li>
      <% end %>
    </ul>
 </div>   
  
  
